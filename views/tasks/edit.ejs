<% include ../partials/header %>

<div class="container">
    <div class="row">
         <h1 style="text-align: center;">Edit <%= task.name %></h1>
         
         <div style = "width: 30%; margin: 25px auto;">
                <form action="/tasks/<%= task._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                         <input class="form-control" type="text" name="task[name]" value="<%= task.name %>">
                    </div>
                    
                     <div class="form-group">
                         <input class="form-control" type="text" name="task[image]" value="<%= task.image %>">
                     </div> 
                     
                     <div class="form-group">
                        <textarea class="form-control" rows="5" name="task[description]"><%= task.description %></textarea>
                    </div>
                     
                      <div class="form-group">
                         <input class="form-control" type="text" name="task[progress]" value="<%= task.progress %>">
                     </div> 
                     
                      <div class="form-group">
                       <!--<label for="selectpic">Person in Charge:</label>-->
                        <select class="form-control" required="required" id="selectpic" placeholder="Person in Charge" name="task[picid]">
                        <option value="<%= task.pic.id%>" selected><%= task.pic.username %></option>
                          <% admins.forEach(function(admin){ %>
                                <% if (!task.pic.id.equals(admin._id)) {%>
                                    <option value="<%= admin._id %>">
                                        <%= admin.username %>
                                    </option>
                                <% } %>
                          <% }) %>
                          
                        </select>
                   </div>
                     
                     <div class="form-group">
                         <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                     </div>
                </form>
                   <a href="/tasks/<%=task._id%>">Go back</a>
             
         </div>
     
    
    </div>
</div>
<% include ../partials/footer %>