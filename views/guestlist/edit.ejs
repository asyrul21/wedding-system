<% include ../partials/header %>

<div class="container">
    <div class="row">
         <h1 style="text-align: center;">Edit <%= guest.name%></h1>
         
         <div style = "width: 30%; margin: 25px auto;">
              <form action="/guestlist/<%=guest._id%>?_method=PUT" method="POST">
                        <div class="form-group">
                             <input class="form-control" type="text" name="guest[name]" value="<%= guest.name %>" required="required">
                        </div>
                        
                        <div class="form-group">
                             <input class="form-control" type="number" name="guest[count]" value="<%= guest.count %>" min="1" step="1" required="required">
                        </div>
                        
                        <div class="form-group">
                             <input class="form-control" type="text" name="guest[remarks]" value="<%= guest.remarks %>">
                        </div>
                        
                        <div class="form-group">
                                 
                            <select class="form-control" required="required" id="selectstatus" value="<%= guest.status %>" name="guest[status]">
                                    <!--<option value="" disabled selected>Confirmed his attendance?</option>-->
                                    <option value="Confirmed">Confirmed</option>
                                    <option value="Not Confirmed">Not Confirmed</option>
                            </select>
                            
                        </div>
                       
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                        </div>
                </form>
                <a href="/guestlist">Go back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>